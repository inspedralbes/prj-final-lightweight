generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id Int @id @default(autoincrement())
  username String @unique
  passwordHash String
  role Role @default(CLIENT)
  createdAt DateTime @default(now())
  // Foreing Keys
  routines Routine[] @relation("UserRoutines")
  coachSessions LiveSessions[] @relation("UserCoach") 
  dietPlans DietPlans[] @relation("UserDietPlans")
}

model ExerciseCatalog {
  id Int @id @default(autoincrement())
  name String
  description String?
  category String?
  createdAt DateTime @default(now())
  // Foreign Keys
  routineExercises RoutineExercises[] @relation("ExerciseInRoutine")
}

model Routine {
  id Int @id @default(autoincrement())
  coachId Int
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Foreign Keys
  coach Users @relation("UserRoutines", fields: [coachId], references: [id])
  routineExercises RoutineExercises[] @relation("RoutineExercises")
  liveSessions LiveSessions[] @relation("RoutineSessions")
}

model RoutineExercises {
  id Int @id @default(autoincrement())
  routineId Int 
  exerciseId Int
  sets Int
  reps Int
  rest Int 
  notes String?
  order Int
  // Foreign Keys
  routine Routine @relation("RoutineExercises", fields: [routineId], references: [id])
  exercise ExerciseCatalog @relation("ExerciseInRoutine", fields: [exerciseId], references: [id])  
}

model LiveSessions {
  id Int @id @default(autoincrement())
  coachId Int
  routineId Int
  sessionCode String @unique
  status STATUS 
  createdAt DateTime @default(now())
  completedAt DateTime?
  // Foreign Keys
  coach Users @relation("UserCoach", fields: [coachId], references: [id])
  routine Routine @relation("RoutineSessions", fields: [routineId], references: [id])

  participants LiveParticipants[] @relation("SessionParticipants")
  events WorkoutEvents[] @relation("SessionEvents")
  messages ChatMessages[] @relation("SessionMessages")
}

model LiveParticipants {
  id Int @id @default(autoincrement())
  sessionId Int
  participantId String
  role Role @default(CLIENT)
  joinedAt DateTime @default(now())
  leftAt DateTime?
  // Foreign Keys
  session LiveSessions @relation("SessionParticipants", fields: [sessionId], references: [id])
}

model WorkoutEvents {
  id Int @id @default(autoincrement())
  sessionId Int
  eventType String
  data Json
  timestamp DateTime @default(now())
  // Foreign Keys
  session LiveSessions @relation("SessionEvents", fields: [sessionId], references: [id])
}

model ChatMessages {
  id Int @id @default(autoincrement())
  sessionId Int
  sender String
  message String
  timestamp DateTime @default(now())
  // Foreign Keys
  session LiveSessions @relation("SessionMessages", fields: [sessionId], references: [id])
}

model FoodCatalog {
  id Int @id @default(autoincrement())
  name String
  calories Float
  protein Float
  carbs Float
  fats Float
  unit String
  createdAt DateTime @default(now())

  foodInMeals DietMealItems[] 
}

model DietPlans {
  id Int @id @default(autoincrement())
  coachId Int
  name String
  createdAt DateTime @default(now())
  // Foreign Keys
  coach Users @relation("UserDietPlans", fields: [coachId], references: [id])
  
  dietMeals DietMeals[]
}

model DietMeals {
  id Int @id @default(autoincrement())
  dietPlanId Int
  name String
  mealType String
  order Int
  // Foreign Keys
  dietPlan DietPlans @relation(fields: [dietPlanId], references: [id])

  items DietMealItems[] 
}

model DietMealItems {
  id Int @id @default(autoincrement())
  dietMealId Int
  foodId Int
  quantity Float
  // Foreign Keys
  dietMeal DietMeals @relation(fields: [dietMealId], references: [id])
  food FoodCatalog @relation(fields: [foodId], references: [id])
}

enum Role{
  CLIENT
  COACH
}

enum STATUS{
  PENDING
  ACTIVE
  COMPLETED
} 